<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Team.SelectedTeam">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/stade"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/house"
        android:layout_width="59dp"
        android:layout_height="45dp"
        android:background="@drawable/button_selector"
        android:borderlessButtonStyle="@style/Widget.AppCompat.Button.Borderless"
        android:drawableStart="@drawable/house"
        android:onClick="goToHouse"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <LinearLayout
        android:id="@+id/linearLayoutBosanci1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#AA1C4285"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098">

        <Button
            android:id="@+id/playerDany"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Dany"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerRuben"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Ruben"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerClaudiu"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Claudiu"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerFlavyus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Flavyus"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerDenis"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Denis"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerRoberto"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Roberto"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBosanci2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#AA1C4285"
        android:gravity="center_horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174">

        <Button
            android:id="@+id/playerLucian"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Lucian"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerDavid"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="David"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/playerSimon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Simon"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerYaniv"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Yaniv"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerEdaurd"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Eduard"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playerIosif"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="#0D2753"
            android:text="Iosif"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>


    <EditText
        android:id="@+id/ID_Team1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Team 1"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <EditText
        android:id="@+id/ID_Team2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="center"
        android:hint="Team 2"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:backgroundTint="#000D2753"
        android:onClick="goToLiveSelected"
        android:text="Start"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.892" />

    <EditText
        android:id="@+id/ID_Timer_second"
        android:layout_width="110dp"
        android:layout_height="64dp"
        android:ems="4"
        android:hint="Second half"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <EditText
        android:id="@+id/ID_Timer_halftime"
        android:layout_width="110dp"
        android:layout_height="64dp"
        android:ems="4"
        android:hint="   Half time"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <EditText
        android:id="@+id/ID_Timer_first"
        android:layout_width="110dp"
        android:layout_height="64dp"
        android:ems="4"
        android:hint="   First half"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />


</androidx.constraintlayout.widget.ConstraintLayout>