<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceYellowCard">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="417dp"
        android:layout_height="744dp"
        app:srcCompat="@drawable/simple"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-7dp" />

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#1C2331"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026">

        <Button
            android:id="@+id/BT_Claudiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#071227"
            android:elevation="4dp"
            android:onClick="goToLive"
            android:padding="10dp"
            android:text="Claudiu"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:translationZ="4dp" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>